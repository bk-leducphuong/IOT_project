<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Action Logs - IoT Control</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .action-logs-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .logs-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2em;
            padding-bottom: 1.5em;
            border-bottom: 2px solid #e5e7eb;
        }

        .logs-header h1 {
            margin: 0;
            font-size: 2em;
        }

        .header-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .action-logs-list {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            max-height: 70vh;
            overflow-y: auto;
            padding: 1em;
        }

        .log-item {
            padding: 1.2em;
            margin-bottom: 0.8em;
            border-radius: 8px;
            border-left: 4px solid #e5e7eb;
            background: #f9fafb;
            transition: var(--transition);
        }

        .log-item:hover {
            background: #f3f4f6;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .log-item.automation {
            border-left-color: var(--primary-color);
        }

        .log-item.user {
            border-left-color: var(--success-color);
        }

        .log-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5em;
        }

        .log-actor {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .log-actor.automation {
            background: #e0e7ff;
            color: var(--primary-dark);
        }

        .log-actor.user {
            background: #d1fae5;
            color: #065f46;
        }

        .log-action-type {
            font-weight: 600;
            color: #374151;
            font-size: 0.9em;
        }

        .log-description {
            color: #6b7280;
            margin-top: 0.5em;
            line-height: 1.5;
        }

        .log-timestamp {
            color: #9ca3af;
            font-size: 0.85em;
            margin-top: 0.5em;
        }

        .log-device {
            font-family: 'Courier New', monospace;
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.9em;
        }

        .empty-logs {
            text-align: center;
            padding: 3em 2em;
            color: #6b7280;
        }

        .empty-logs-icon {
            font-size: 4em;
            margin-bottom: 1em;
            opacity: 0.5;
        }

        .filter-controls {
            margin-bottom: 1.5em;
            display: flex;
            gap: 1em;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter-btn {
            padding: 8px 16px;
            border-radius: 8px;
            border: 2px solid #e5e7eb;
            background: white;
            color: #6b7280;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
        }

        .filter-btn:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .filter-btn.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        /* Scrollbar styling */
        .action-logs-list::-webkit-scrollbar {
            width: 8px;
        }

        .action-logs-list::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .action-logs-list::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }

        .action-logs-list::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

        @media (max-width: 768px) {
            .logs-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1em;
            }

            .header-actions {
                width: 100%;
                flex-direction: column;
            }

            .action-logs-list {
                max-height: 60vh;
            }
        }
    </style>
</head>
<body>
    <div class="container action-logs-container">
        <div class="logs-header">
            <h1>üìã Action Logs</h1>
            <div class="header-actions">
                <a href="/dashboard" class="action-logs-btn" style="background: var(--primary-color);">‚Üê Back to Dashboard</a>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </div>

        <% if (devices && devices.length > 0) { %>
            <div class="filter-controls">
                <a href="/action-logs" class="filter-btn <%= !filter ? 'active' : '' %>">All</a>
                <a href="/action-logs?filter=automation" class="filter-btn <%= filter === 'automation' ? 'active' : '' %>">ü§ñ Automation</a>
                <a href="/action-logs?filter=user" class="filter-btn <%= filter === 'user' ? 'active' : '' %>">üë§ User</a>
                <% devices.forEach(device => { %>
                    <a href="/action-logs?device=<%= device._id %>" class="filter-btn <%= deviceFilter === device._id ? 'active' : '' %>">
                        üì° <%= device._id %>
                    </a>
                <% }) %>
            </div>

            <% if (actionLogs && actionLogs.length > 0) { %>
                <div class="action-logs-list">
                    <% actionLogs.forEach(log => { %>
                        <div class="log-item <%= log.actor.toLowerCase() %>">
                            <div class="log-header">
                                <div>
                                    <span class="log-actor <%= log.actor.toLowerCase() %>">
                                        <%= log.actor === 'AUTOMATION' ? 'ü§ñ' : 'üë§' %> <%= log.actor %>
                                    </span>
                                    <span class="log-action-type" style="margin-left: 10px;">
                                        <%= log.actionType %>
                                    </span>
                                </div>
                                <div class="log-device">
                                    <%= log.deviceMacAddress || 'Unknown' %>
                                </div>
                            </div>
                            <div class="log-description">
                                <%= log.description || 'No description' %>
                            </div>
                            <div class="log-timestamp">
                                <%= new Date(log.timestamp).toLocaleString() %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-logs">
                    <div class="empty-logs-icon">üìã</div>
                    <p>No action logs found.</p>
                </div>
            <% } %>
        <% } else { %>
            <div class="empty-logs">
                <div class="empty-logs-icon">üì±</div>
                <p>No devices found. Add a device to see action logs.</p>
                <a href="/dashboard" class="action-logs-btn" style="margin-top: 1em; display: inline-block;">Go to Dashboard</a>
            </div>
        <% } %>
    </div>
</body>
</html>
